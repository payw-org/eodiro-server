{
  "compilerOptions": {
    "strict": false,
    "declaration": true,
    "moduleResolution": "node",
    "target": "ES2018",
    "allowJs": true,
    "module": "CommonJS",
    "outDir": "./build",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["./*"]
    },
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }],
    "lib": ["ES2020.String", "DOM", "ESNext.AsyncIterable", "es2019"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "**/generated",
    "src/api/cafeteria",
    "src/api/lectures",
    "src/api/my",
    "src/api/vacant"
  ]
}
