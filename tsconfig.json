{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./build",
    "noEmit": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@src/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "build"]
}
