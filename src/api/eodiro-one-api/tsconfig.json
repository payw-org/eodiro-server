{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "../../../",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "index.ts",
    "**/functions.ts",
    "**/*.f.ts",
    "dev",
    "**/__TEST__"
  ]
}
